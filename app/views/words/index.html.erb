<p style="color: green"><%= notice %></p>

<h1>Words</h1>

<%= link_to "New word", new_word_path, :class => "btn btn-primary" %>
<div class="row">
  <div class="col-2">
    <h3>Word</h3>
  </div>
  <div class="col-2">
    <h3>Pronunciation</h3>
  </div>
  <div class="col-4">
    <h3>Meaning</h3>
  </div>
  <div class="col-2">
    <h3>Level of Difficult</h3>
  </div>
  <div class="col-2">
    <h3>Actions</h3>
  </div>
</div>
<div id="words">
  <% @words.each do |word| %>
    <%= render partial: "word_list_item", locals: {word: word} %>
  <% end %>
</div>

