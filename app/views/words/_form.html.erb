<%= form_with(model: word) do |form| %>
  <% if word.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(word.errors.count, "error") %> prohibited this word from being saved:</h2>

      <ul>
        <% word.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-6">
      <div class="mb-3">
        <%= form.label :word, style: "display: block" %>
        <%= form.text_field :word, :class => "form-control" %>
      </div>
    </div>
    <div class="col-6">
      <div class="mb-3">
        <%= form.label :pronunciation, style: "display: block" %>
        <%= form.text_field :pronunciation, :class => "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="mb-3">
      <%= form.label :meaning %>
      <%= form.rich_text_area :meaning %>
    </div>
  </div>

  <div class="row">
    <div class="mb-3">
      <%= form.label :level_of_difficult, style: "display: block" %>
      <%= form.select(:level_of_difficult, Word.list_level_of_difficulties, { :class => "form-group" }) %>
    </div>
  </div>

  <div class="d-grid">
    <%= form.submit "Add", :class => "btn btn-primary" %>
  </div>
<% end %>
